{{!
    @template mod_dialogue/list_filter_selector

    This template renders filter dropdown.

    Example context (json):
    {
        "all": true,
        "open": false,
        "closed": false
    }
}}
<div id="mod-dialogue-list-filter-state-{{uniqid}}" class="dropdown m-b-1">
    <button id="groupingdropdown" type="button" class="btn btn-outline-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" aria-label="{{#str}} aria:filterdropdown, mod_dialogue {{/str}}">
        {{#pix}} i/filter {{/pix}}
        <span class="d-sm-inline-block" data-active-item-text>
            {{#all}}{{#str}} all, mod_dialogue {{/str}}{{/all}}
            {{#open}}{{#str}} open, mod_dialogue {{/str}}{{/open}}
            {{#closed}}{{#str}} closed, mod_dialogue {{/str}}{{/closed}}
        </span>
    </button>
    <ul class="dropdown-menu" data-show-active-item data-active-item-text aria-labelledby="filterdropdown">
        <li>
            <a class="dropdown-item {{#all}}active{{/all}}" href="#" data-filter="filter" data-value="all" aria-label="{{#str}} aria:all, mod_dialogue {{/str}}" aria-controls="dialogues-view-{{uniqid}}">
                {{#str}} all, mod_dialogue {{/str}}
            </a>
        </li>
        <li>
            <a class="dropdown-item {{#open}}active{{/open}}" href="#" data-filter="filter" data-value="open" aria-label="{{#str}} aria:open, mod_dialogue {{/str}}" aria-controls="dialogues-view-{{uniqid}}">
                {{#str}} open, mod_dialogue{{/str}}
            </a>
        </li>
        <li>
            <a class="dropdown-item {{#closed}}active{{/closed}}" href="#" data-filter="filter" data-value="closed" aria-label="{{#str}} aria:closed, mod_dialogue{{/str}}" aria-controls="dialogues-view-{{uniqid}}">
                {{#str}} closed, mod_dialogue{{/str}}
            </a>
        </li>
    </ul>
</div>
{{#js}}
    require(
    [
    'mod_dialogue/dropdown_control'
    ],
    function(dropDownControl) {
        dropDownControl.init('#mod-dialogue-list-filter-state-{{uniqid}}', '{{{preferencename}}}');
    });
{{/js}}
